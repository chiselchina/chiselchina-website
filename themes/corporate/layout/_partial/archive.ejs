<div class="row">
<% if(index == true){ %>
<div class="col-xs-12 blog-posts">
<% } else { %>
<div class="col-md-9 col-sm-9 blog-posts">
<% } %>
<% if (pagination == 2){ %>
  <% page.posts.each(function(post){ %>
    <%- partial('article', {post: post, index: true}) %>
  <% }) %>
  <% if (page.total > 1){ %>
    <nav id="page-nav">
      <%- paginator({
        prev_text: '&laquo; 上一页',
        next_text: '下一页 &raquo;'
      }) %>
    </nav>
  <% } %>
<% } else { %>
  <section class="archives-wrap">
    <div class="archives">
      <% page.posts.each(function(post, i){ %>
	<%- partial('archive-post', {post: post, even: i % 2 == 0, index: index}) %>
      <% }) %>
    </div>
    <% if (page.posts.length){ %>
      <div id="page-nav" class="pagination">
	<%- paginator({
	  prev_text: '上一页',
	  next_text: '下一页'
          }) %>
      </div>
    <% } %>
  </section>
<% } %>
</div>
<% if(index == false){ %>
<div class="col-md-3 col-sm-3 blog-sidebar">
  <%- partial('sidebar') %>
</div>
<% } %>
</div>
